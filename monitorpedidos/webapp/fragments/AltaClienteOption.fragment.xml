<core:FragmentDefinition controllerName="monitorpedidos.controller.MonitorPedidos"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:f="sap.ui.layout.form"
    xmlns:upload="sap.m.upload"
    >
    <Dialog id="OptionDialogCliente" title="{i18n>AltaCliente}" resizable="true">

        <f:SimpleForm id="fDatosCabCliente" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label text="{i18n>sociedad}" />
                <ComboBox id="idAreaClientes" items="{ path: 'AreaVentas>/', sorter: { path: 'Vkorg' } }" change=".onChangeArea" showSecondaryValues="true" filterSecondaryValues="true" width="auto">
                    <core:ListItem key="{AreaVentas>Vkorg}" text="{AreaVentas>Vtext}" additionalText ="{AreaVentas>Vkorg}"/>
                </ComboBox>
                
                <Text text=" " />
                <Title text="{i18n>DatosPersonales}"/>
                <Label text="{i18n>NifCliente}"/>
                <Input id="inputNifCliente" maxLength="10" liveChange="onVerifyNIF" />
                <Label text="{i18n>Nombrecliente}"/>
                <Input id="inputNombreCliente" maxLength="35"/>
                <Label text="{i18n>Telefono}"/>
                <Input id="inputTelefonoCliente" maxLength="16" type="Tel" liveChange="onVerifyTelf" />
                <Label text="{i18n>MailContacto}"/>
                <Input id="inputMailContacto" maxLength="24" type="Email" liveChange="onVerifyEmail" />

                <Text text=" "/>
                <Title text="{i18n>DatosDireccion}"/>
                <Label text="{i18n>Calle}" />
                <Input id="inputCalleCliente" maxLength="35"/>
                <Label text="{i18n>CodPostal}"/>
                <Input id="inputCodPostalCliente" maxLength="10"/>
                <Label text="{i18n>Poblacion}"/>
                <Input id="inputPoblacionCliente" maxLength="25"/>
                <Label text="{i18n>Pais}"/>
                <Input id="inputPaisCliente" maxLength="15"/>
                <Label text="{i18n>Region}"/>
                <Input id="inputRegionCliente" maxLength="25"/>

                <Text text=" "/>
                <Title text="{i18n>CamposDIR}"/>
                <Label text="{i18n>Plataforma}"/>
                <Input id="inputPlataformaCliente" maxLength="15"/>
                <Label text="{i18n>DirOrganoGestor}"/>
                <Input id="inputOrganoGestorCliente" maxLength="15"/>
                <Label text="{i18n>DirUnidadTramitadora}"/>
                <Input id="inputUnidadTramitadoraCliente" maxLength="15"/>
                <Label text="{i18n>DirOficinaContable}"/>
                <Input id="inputOficinaContableCliente" maxLength="15"/>
                <Label text="{i18n>DirAdministracion}"/>
                <Input id="inputAdministracionCliente" maxLength="15"/>

                <Title text=""/>
                <Label text="{i18n>CondicionPago}"/>
                <Input id="inputCondicionPagoCliente" maxLength="4" />

                <Text text=" "/>
                <Title text="{i18n>AdjuntarDocumentacion}"/>
                <Label id="inputAdjuntarDocumentacionCliente" text=""/>
                <upload:UploadSet id="uploadSetDNI" fileTypes="pdf" instantUpload="true" />
                 
            </f:content>
        </f:SimpleForm>
        <OverflowToolbar>
            <Button text="Crear" type="Emphasized" press="onEnviarMailAltaCliente">
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Button>
            <ToolbarSpacer />
            <Button text="Cancelar" type="Emphasized" press="CloseClientDialog">
                <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                </layoutData>
            </Button>
        </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>
