<core:FragmentDefinition controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table">
    <!--    -->
    <m:OverflowToolbar>
                <m:Title text="" />
                <m:ToolbarSpacer />
                <m:Button
                    id="botondel"
                    icon="sap-icon://delete"
                    text="{i18n>delPos}"
                    type="Emphasized"
                    press="onDeletePosPed"
                    visible="true"
                    enabled="true"
                />
                <m:Button
                    id="botonadd"
                    icon="sap-icon://sys-add"
                    text="{i18n>addPos}"
                    type="Emphasized"
                    press="onaddPosPed"
                    visible="true"
                    enabled="true"
                />
            </m:OverflowToolbar>
    <m:VBox renderType="Bare">
        <table:Table selectionMode="Single" id="TablaPosiciones" rows="{path: 'PedidoPos>/'}"  visibleRowCountMode="Interactive"
                visibleRowCount="3"
                width= "100%">

            <table:Column hAlign="Center">
                <m:Label text="{i18n>posicion}"/>
                <table:template>
                    <m:Text text="{PedidoPos>Vbelp}"/>
                </table:template>
            </table:Column>    
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Material}"/>
                <table:template>
                    <m:Text text="{PedidoPos>Matnr}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Descripcion}" />
                <table:template>
                    <m:Text text="{PedidoPos>Maktx}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Cantidad}" />
                <table:template>
                    <m:Text text="{PedidoPos>Reqty}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Unidades}" />
                <table:template>
                    <m:Text text="{PedidoPos>SalesUniT}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Importe}" />
                <table:template>
                    <m:Text text="{posPedFrag>/Netwr}" />
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Moneda}" />
                <table:template>
                    <m:Text text="{posPedFrag>/Waers}" />
                </table:template>
            </table:Column>
        </table:Table>
    </m:VBox>

</core:FragmentDefinition>