<core:FragmentDefinition controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table">
    <!--    -->
    <m:OverflowToolbar>
                <m:Title text="" />
                <m:ToolbarSpacer />
                <m:Button
                    id="botonaddref"
                    icon="sap-icon://sys-add"
                    text="{i18n>addPosCon}"
                    type="Emphasized"
                    press="onaddPosPedCon"
                    visible="{= (${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false) &amp;&amp; (!!${ModoApp>/Nomcont})}"
                    enabled="true"
                />
                <m:Button
                    id="botondel"
                    icon="sap-icon://delete"
                    text="{i18n>delPos}"
                    type="Emphasized"
                    press="onDeletePosPed"
                    visible="{= (${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false)}"
                    enabled="true"
                />
                <m:Button
                    id="botonadd"
                    icon="sap-icon://sys-add"
                    text="{i18n>addPos}"
                    type="Emphasized"
                    press="onaddPosPed"
                    visible="{= (${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false) &amp;&amp; (${ModoApp>/Nomcont} === true )}"
                    enabled="true"
                />
                <m:Button
                    id="botoncopy"
                    icon="sap-icon://copy"
                    text="{i18n>copyPos}"
                    type="Emphasized"
                    press="onCopyPosPed"
                    visible="{= (${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false) &amp;&amp; (${ModoApp>/Nomcont} === true )}"
                    enabled="true"
                />
            </m:OverflowToolbar>
    <m:VBox renderType="Bare">
        <table:Table selectionMode="Single" id="TablaPosiciones" rows="{path: 'PedidoPos>/'}"  visibleRowCountMode="Interactive"
        visibleRowCount="3"
                width= "100%">
        <!--<table:Table selectionMode="Single" id="TablaPosiciones" rows="{path: 'DisplayPosPed>/results'}"  visibleRowCountMode="Interactive"-->
                

            <table:Column hAlign="Center">
                <table:template>
                    <m:Button id="botonedit" icon="sap-icon://edit" tooltip="{i18n>modPos}" type="Ghost" press="onModPosPed"/>
                    <!--<m:Text text="{DisplayPosPed>Posnr}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>posicion}"/>
                <table:template>
                    <m:Text text="{PedidoPos>ItmNumber}"/>
                    <!--<m:Text text="{DisplayPosPed>Posnr}"/>-->
                </table:template>
            </table:Column>    
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Material}"/>
                <table:template>
                    <m:Text text="{PedidoPos>Material}"/>
                    <!--<m:Text text="{DisplayPosPed>Matnr}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Descripcion}" />
                <table:template>
                    <m:Text text="{PedidoPos>ShortText}"/>
                    <!--<m:Text text="{DisplayPosPed>Arktx}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Cantidad}" />
                <table:template>
                    <m:Text text="{PedidoPos>ReqQty}"/>
                    <!--<m:Text text="{DisplayPosPed>Kpein}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>cantBase}" />
                <table:template>
                    <m:Text text="{PedidoPos>Kpein}"/>
                    <!--<m:Text text="{DisplayPosPed>Kpein}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Unidades}" />
                <table:template>
                    <m:Text text="{PedidoPos>SalesUnit}"/>
                    <!--<m:Text text="{DisplayPosPed>Meins}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Importe}" />
                <table:template>
                    <m:Text text="{PedidoPos>CondValue}" />
                    <!--<m:Text text="{DisplayPosPed>Netwr}" />-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Moneda}" />
                <table:template>
                    <m:Text text="{PedidoPos>Currency}" />
                    <!--<m:Text text="{DisplayPosPed>Waerk}" />-->
                </table:template>
            </table:Column>
             <table:Column hAlign="Center">
                <m:Label text="{i18n>zcost}" />
                <table:template>
                    <m:Text text="{PedidoPos>Ykostl}" />
                </table:template>
            </table:Column>
             <table:Column hAlign="Center">
                <m:Label text="{i18n>zord}" />
                <table:template>
                    <m:Text text="{PedidoPos>Yaufnr}" />
                </table:template>
            </table:Column>
        </table:Table>
    </m:VBox>

</core:FragmentDefinition>
