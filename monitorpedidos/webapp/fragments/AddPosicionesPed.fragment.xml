<core:FragmentDefinition
    controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id='pedPosDial'
        title="{i18n>detPos}"
        resizable="true"
    >
        <buttons>
            <Button
                icon="sap-icon://sys-add"
                text="{i18n>add}"
                type="Emphasized"
                press=".addPedPos"
            />
            <Button
                icon="sap-icon://cancel"
                text="{i18n>cancel}"
                type="Emphasized"
                press=".cancelPedPos"
            />
        </buttons>
        <f:SimpleForm
            id="sf_PedPos"
            editable="true"
        >
            <Label text="{i18n>posicion}" />
            <Input
                id="f_tipopedpos"
                value="{posPedFrag>/Vbelp}"
                editable="false"
            />
            <Label text="{i18n>nomMat}" />
           <Input
                id="f_nommat"
                value="{posPedFrag>/ShortText}"
                maxLength="40"
                editable="true"
            />
            <Label text="{i18n>mat}" />
            <Input
                id="f_material"
                showValueHelp="true"
                valueHelpRequest=".onValueHelpRequestServ"
                value="{posPedFrag>/Material}"
            />
            <Label text="{i18n>fechaPrecio}" />
            <DatePicker
                id="DTPdesde"
                placeholder="{i18n>datesel}"
                change="handleChange"
                valueFormat="yyyy-MM-dd"
                value="{posPedFrag>/BillDate}"
                displayFormat="medium"
            />
            <Label text="{i18n>import}" />
            <Input
                id="f_importpos"
                value="{posPedFrag>/CondValue}"
                placeholder="0,00"
                type="Number"
            />
            <Label text="{i18n>cant}" />
            <Input
                id="f_cantpos"
                value="{posPedFrag>/ReqQty}"
                placeholder="0"
                type="Number"
            />
             <Label text="{i18n>cantBase}" />
            <Input
                id="f_cantbasepos"
                value="{posPedFrag>/Kpein}"
                placeholder="0"
                type="Number"
            />
            <Label text="{i18n>Moneda}" />
            <ComboBox
                id="f_monedapos"
                editable="true"
                width="200px"
                items="{ path: 'listadoMoneda>/', sorter: { path: 'Waers' } }"
                selectedKey="{posPedFrag>/Currency}"
                placeholder="EUR"
                
            >
                <core:ListItem
                    key="{listadoMoneda>Waers}"
                    text="{listadoMoneda>Waers}"
                />
            </ComboBox>
            <Label text="{i18n>Unit}" />
            <Input
                id="f_unitpos"
                value="{posPedFrag>/SalesUnit}"
                placeholder="UN"
                type="Text"
            />
           <Label text="{i18n>ceco}" />
            <Input
                id="f_cecosPOS"
                showValueHelp="true"
                editable="{= ${ModoApp>/mode}  === 'C' ?  true : false ||  ${ModoApp>/mode} === 'M' ? false : true }"
                valueHelpRequest=".onValueHelpCecos"
                value="{DisplayPEP>/Ykostl}"
                visible="false"
            />
            <Label text="{i18n>ord}" />
            <Input
                id="f_ordenesPOS"
                showValueHelp="true"
                editable="{= ${ModoApp>/mode}  === 'C' ?  true : false ||  ${ModoApp>/mode} === 'M' ? false : true }"
                valueHelpRequest=".onValueHelpOrd"
                value="{DisplayPEP>/Yaufnr}"
                visible="false"
            />           
            <!--<ComboBox
                value="{posPedFrag>/Waers}"
                placeholder="EUR"
            />
            <core:ListItem key="{posPedFrag>Waers}"  text="{posPedFrag>Ktext}"/>-->
            <!--//////////////////////////////////////////////////////////////////////////////////////////////////////////7-->

            <!-- <Label text="{i18n>centrocoste}" />
            <ComboBox
                value="{posPedFrag>/Netwr}"
                placeholder="0,00"
            />
            <Label text="{i18n>orden}" />
            <ComboBox
                value="{posPedFrag>/Netwr}"
                placeholder="0,00"
            />
            <Label text="{i18n>libromayor}" />
            <ComboBox
                value="{posPedFrag>/Netwr}"
                placeholder="0,00"
            />-->
           
        </f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
