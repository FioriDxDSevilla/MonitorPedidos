<core:FragmentDefinition
    controllerName="monitorpedidos.controller.MonitorPedidos"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:ui="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <IconTabBar
        id="idIconTabBar"
        select=".onFilterSelect"
        class="sapUiResponsiveContentPadding"
        expanded="{device>/isNoPhone}">
        <items>
            <IconTabFilter
                id="Filtro1"
                icon="sap-icon://clear-filter"
                iconColor="Default"
                design="Horizontal"
                text="Todas"
                count="{Filtros>/Total}"
                key="Free"/>
            <!-- <IconTabSeparator
                id="Separador1"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro2"
                icon="sap-icon://edit"
                iconColor="Default"
                design="Horizontal"
                text="En Redacción"
                count="{Filtros>/totalred}"
                key="Ok"
            />
            <!--<IconTabSeparator
                id="Separador2"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro3"
                icon="sap-icon://approvals"
                iconColor="Negative"
                design="Horizontal"
                text="Pdte. Aprobar"
                count="{Filtros>/totalpdte}"
                key="Heavy"
            />
            <!--   <IconTabFilter
                id="Filtro4"
                icon="sap-icon://accept"
                iconColor="Positive"
                design="Horizontal"
                text="Responsable Aprob."
                key="Aprob"
            />-->
            <!--<IconTabSeparator
                id="Separador3"
                icon="sap-icon://begin"
            />-->
            <!--<IconTabFilter
                id="Filtro4"
                icon="sap-icon://customer-financial-fact-sheet"
                iconColor="Negative"
                design="Horizontal"
                text="Pdte. Financiero"
                key="Overweight"
            />-->
            <!--<IconTabSeparator
                id="Separador4"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro5"
                icon="sap-icon://money-bills"
                iconColor="Negative"
                design="Horizontal"
                text="Pdte. Facturar"
                count="{Filtros>/totalfac}"
                key="Money"
            />
            <!--<IconTabSeparator
                id="Separador5"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro6"
                icon="sap-icon://unpaid-leave"
                iconColor="Negative"
                design="Horizontal"
                text="Pdte. Cobrar"
                count="{Filtros>/totalpdte}"
                key="Payment"
            />
            <!--<IconTabSeparator
                id="Separador6"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro7"
                icon="sap-icon://paid-leave"
                iconColor="Positive"
                design="Horizontal"
                text="Cobradas"
                 count="{Filtros>/totalcob}"
                key="Sales"
            />
            <!--<IconTabSeparator
                id="Separador7"
                icon="sap-icon://begin"
            />-->
            <IconTabFilter
                id="Filtro8"
                icon="sap-icon://decline"
                iconColor="Negative"
                design="Horizontal"
                text="Denegadas"
                count="{Filtros>/TotalDen}"
                key="Cancel"
            />
             <IconTabFilter
                id="Filtro9"
                icon="sap-icon://thumb-up"
                iconColor="Positive"
                design="Horizontal"
                text="Aprobación"
                key="Approv"
            />

              
        </items>
        <content>
            <ui:Table
                id="idTablePEPs"
                selectionMode="Single"
                rows="{
                            path: 'listadoSolicitudes>/'}"
                visibleRowCountMode="Interactive"
                width="100%"
                enableCellFilter="{ui>/cellFilterOn}"
                filter="filterOption"
                sort="sortOption">
                <ui:extension>
					<OverflowToolbar style="Clear">
						<Button
                            id="Filtr10"
                            visible="false"
                            type="Accept"
                            text="Enviar a Liberacion"
                            press="onEnviarLiberacion"
                        />
					</OverflowToolbar>
				</ui:extension>
                <ui:columns>
                    <ui:Column
                        width="auto"
                        filterProperty="IdSolicitud"
                        sortProperty="IdSolicitud"
                        tooltip="{i18n>numped}"
                    >
                        <Label text="{i18n>numped}" />
                        <ui:template>
                            <Text
                                id="idPEP"
                                text="{listadoSolicitudes>IDSOLICITUD}"
                            />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        width="auto"
                        filterProperty="Fechadoc"
                        sortProperty="Fechadoc"
                        tooltip="{i18n>fechadocu}"
                    >
                        <Label text="{i18n>fechadocu}" />
                        <ui:template>
                            <Text
                                text="{path: 'listadoSolicitudes>Fechadoc',  type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy'}}"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Creador"
                        sortProperty="Creador"
                        tooltip="{i18n>creador}"
                    >
                        <Label text="{i18n>creador}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Creador}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Cliente"
                        sortProperty="Cliente"
                        tooltip="{i18n>codcli}"
                    >
                        <Label text="{i18n>codcli}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>CLIENTE}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Nombrecliente"
                        sortProperty="Nombrecliente"
                        tooltip="{i18n>nomcli}"
                    >
                        <Label text="{i18n>nomcli}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Nombrecliente}" />
                        </ui:template>
                    </ui:Column>
                    
                    <!--<ui:Column
                        width="auto"
                        filterProperty="ImpPedido"
                        sortProperty="ImpPedido"
                        tooltip="{i18n>imptotal}"
                    >
                        <Label text="{i18n>imptotal}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>ImpPedido}" />
                        </ui:template>
                    </ui:Column>-->
                    <ui:Column
                        width="auto"
                        filterProperty="Netwr"
                        sortProperty="Netwr"
                        tooltip="{i18n>import}">
                        <Label text="{i18n>import}" />
                         <ui:template>
                            <Text text="{listadoSolicitudes>Netwr}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Waerk"
                        sortProperty="Waerk"
                        tooltip="{i18n>Moneda}">
                        <Label text="{i18n>Moneda}" />
                         <ui:template>
                            <Text text="{listadoSolicitudes>Waerk}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Estado"
                        sortProperty="Estado"
                        tooltip="{i18n>status}"
                    >
                        <Label text="{i18n>status}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>ESTADO}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Zorden"
                        sortProperty="Zorden"
                        tooltip="{i18n>zord}"
                    >
                        <Label text="{i18n>zord}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Zorden}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Zcoste"
                        sortProperty="Zcoste"
                        tooltip="{i18n>zcost}"
                    >
                        <Label text="{i18n>zcost}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Zcoste}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Nombreapr"
                        sortProperty="Nombreapr"
                        tooltip="{i18n>nomapprov}"
                    >
                        <Label text="{i18n>nomapprov}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Nombreapr}" />
                        </ui:template>
                    </ui:Column>
                    <!--<ui:Column
                        width="auto"
                        filterProperty="Claseped"
                        sortProperty="Claseped"
                        tooltip="{i18n>claseped}"
                    >
                        <Label text="{i18n>claseped}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Claseped}" />
                        </ui:template>
                    </ui:Column>-->
                    <ui:Column
                        width="auto"
                        filterProperty="Orgventas"
                        sortProperty="Orgventas"
                        tooltip="{i18n>orgventas}"
                    >
                        <Label text="{i18n>orgventas}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Orgventas}" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Numfactura"
                        sortProperty="Numfactura"
                        tooltip="{i18n>Numfactura}"
                    >
                        <Label text="{i18n>Numfactura}" />
                        <ui:template>
                            <!--<Text text="{listadoSolicitudes>Numfactura}" />-->
                            <!--<Link text="{listadoSolicitudes>Numfactura}" press="handleLinkFact" />-->
                            	<ObjectIdentifier
                                    id="f_numfact"
                                    title="{listadoSolicitudes>Numfactura}"
                                    titleActive = "true"
                                    titlePress="handleLinkFact" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="auto"
                        filterProperty="Referenciped"
                        sortProperty="Referenciped"
                        tooltip="{i18n>Referenciped}"
                    >
                        <Label text="{i18n>Referenciped}" />
                        <ui:template>
                            <Text text="{listadoSolicitudes>Referenciped}" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        width="auto"
                        filterProperty="Indcontrato"
                        sortProperty="Indcontrato"
                        tooltip="{i18n>Indcontrato}"
                    >
                        <Label text="{i18n>Indcontrato}" />
                        <ui:template>
                            <!--<Text text="{listadoSolicitudes>Indcontrato}" />-->
                            <!--<Switch
                                state="{listadoSolicitudes>Indcontrato}"
                                customTextOn="Yes" customTextOff="No"
                                enabled="false"
                                tooltip="{i18n>Indcontrato}">
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                            </Switch>-->
                            <!--<Link text="{listadoSolicitudes>Indcontrato}" press="handleLinkCont" />-->
                            <ObjectIdentifier
                                    id="f_numcont"
                                    title="{listadoSolicitudes>Indcontrato}"
                                    titleActive = "true"
                                    titlePress="handleLinkCont" />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="2%">
                        <Label text="" />
                        <ui:template>
                            <Button
                                id="TableButton4"
                                icon="sap-icon://edit"
                                tooltip="{i18n>modPos}"
                                type="Ghost"
                                press="onEditOrder"
                                enabled="{PedidoCab>/editPos}"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="2%">
                        <Label text="" />
                        <ui:template>
                            <Button
                                id="TableButton1"
                                icon="sap-icon://display"
                                tooltip="{i18n>visual}"
                                type="Ghost"
                                press="onOpenOrder"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="2%">
                        <Label text="" />
                        <ui:template>
                            <Button
                                id="TableButton2"
                                icon="sap-icon://pdf-attachment"
                                tooltip="{i18n>down}"
                                type="Ghost"
                            />
                        </ui:template>
                    </ui:Column>
                    <ui:Column width="2%">
                        <Label text="" />
                        <ui:template>
                            <Button
                                id="TableButton3"
                                icon="sap-icon://documents"
                                tooltip="{i18n>copy}"
                                type="Ghost"
                            />
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:Table>
        </content>
    </IconTabBar>
</core:FragmentDefinition>
