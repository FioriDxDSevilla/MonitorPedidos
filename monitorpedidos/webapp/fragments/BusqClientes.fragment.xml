<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
>   
<Dialog
      id='cliDial'
      title="{i18n>TableClientes}"  
      resizable="true"
      >

    <fb:FilterBar
        search=".onBusqClientes"
        showClearOnFB="false"
        showFilterConfiguration="false"
        filterBarExpanded="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="A"
                label="NIF/CIF"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nameAcr"
                        value='{FiltrosCli>/Stcd1}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="B"
                label="Codigo de cliente"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_lifnrAcr"
                        value='{FiltrosCli>/Kunnr}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="C"
                label="Nombre"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nifAcr"
                        value='{FiltrosCli>/Name1}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <!--<fb:FilterGroupItem
                groupName="FiltrosCli"
                name="D"
                label="Sociedad"
                partOfCurrentVariant="true"
                visibleInFilterBar="true">
                <fb:control>
                    <Input
                        id="f_nifcAcr"
                        value='{FiltrosCli>/Bukrs}'
                        editable="true"
                    />
                </fb:control>
            </fb:FilterGroupItem>-->
            <!-- <fb:FilterGroupItem groupName="FiltroAcr" name="E" label="{i18n>sociedad}" partOfCurrentVariant="true" visibleInFilterBar="true">
                    <fb:control>
                        <Input id="f_socAcr" value='{FiltrosAcr>/Bukrs}' editable="false"/>
                    </fb:control>
                </fb:FilterGroupItem> -->
        </fb:filterGroupItems>
    </fb:FilterBar>
    <Table id="idTableClientes" items="{
            path: 'listadoClientes>/'}" growing="true" growingThreshold="10">
        <columns>
            <Column width="10%">
                <Text text="{i18n>cod}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>nombre}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>NIF}" />
            </Column>
            <Column width="10%">
                <Text text="{i18n>sociedad}"/>
            </Column>
            <Column width="25%">
                <Text text="{i18n>desc}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Active" press=".onPressCliente">
                <cells>
                    <Text text="{listadoClientes>Kunnr}" />
                    <Text text="{listadoClientes>Name1}" />
                    <Text text="{listadoClientes>Stcd1}" />
                    <Text text="{listadoClientes>Bukrs}" />
                    <Text text="{listadoClientes>Butxt}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Emphasized" press="CloseCliDiag">
                <layoutData>
                <OverflowToolbarLayoutData
                    priority="NeverOverflow"/>
            </layoutData>
                </Button>
            </OverflowToolbar>
    </Dialog> 
</core:FragmentDefinition>
