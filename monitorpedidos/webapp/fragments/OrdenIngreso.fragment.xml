<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
>  
<Dialog
      id="ordDial"
      title="{i18n>TableOrdenes}"  
      resizable="true"
      >
 
    <fb:FilterBar
        search=".onBusqOrdenes"
        showClearOnFB="false"
        showFilterConfiguration="false"
        filterBarExpanded="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="FiltrosOrd"
                name="A"
                label="{i18n>codOrd}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_codOrd"
                        value='{FiltrosOrd>/Aufnr}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosOrd"
                name="C"
                label="{i18n>nomOrd}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nomOrd"
                        value='{FiltrosOrd>/Ktext}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosOrd"
                name="D"
                label="{i18n>orgventas}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true">
                <fb:control>
                    <Input
                        id="f_ordbukrs"
                        value='{FiltrosOrd>/Bukrs}'
                        editable="true"
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <!-- <fb:FilterGroupItem groupName="FiltroAcr" name="E" label="{i18n>sociedad}" partOfCurrentVariant="true" visibleInFilterBar="true">
                    <fb:control>
                        <Input id="f_socAcr" value='{FiltrosAcr>/Bukrs}' editable="false"/>
                    </fb:control>
                </fb:FilterGroupItem> -->
        </fb:filterGroupItems>
    </fb:FilterBar>
    <Table id="idTableOrdenes" items="{
            path: 'listadoOrdenes>/'}" growing="true" growingThreshold="20">
        <columns>
            <Column width="10%">
                <Text text="{i18n>codOrd}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>ktext}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>orgventas}" />
            </Column>
            <Column width="25%">
                <Text text="{i18n>descSoc}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Active" press=".onPressOrdenes">
                <cells>
                    <Text text="{listadoOrdenes>Aufnr}" />
                    <Text text="{listadoOrdenes>Ktext}" />
                    <Text text="{listadoOrdenes>Bukrs}" />
                    <Text text="{listadoOrdenes>Butxt}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Emphasized" press="CloseOrdDiag">
                <layoutData>
                <OverflowToolbarLayoutData
                    priority="NeverOverflow"/>
            </layoutData>
                </Button>
            </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>