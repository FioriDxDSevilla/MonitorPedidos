                <m:Label text="{i18n>NIA}"/>
                <m:Input enabled="false" editable="false" width="200px">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>Plataforma}"/>
                <m:Input enabled="false" editable="false" width="200px">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>DirOrganoGestor}"/>
                <m:Input enabled="false" editable="false" width="200px">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>DirUnidadTramitadora}"/>
                <m:Input enabled="false" editable="false" width="200px">
                    <m:layoutData>
