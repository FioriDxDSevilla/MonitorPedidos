                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>NumPedidoCliente}"/>
                <m:Input enabled="false" editable="false" width="300px">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>

                <core:Title text="" />
