                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>

                <core:Title text="" />
                <m:Label text="{i18n>TextoCabeceraFactura}" wrapping="false"/>
                <m:TextArea width="570px"/>
                <m:Label text="{i18n>InformacionRechazo}"/>
                <m:TextArea width="570px"/>
                <m:Label text="{i18n>TextoAclaraciones}"/>
                <m:TextArea width="570px"/>
            </f:content>
        </f:SimpleForm>
    </m:VBox>
