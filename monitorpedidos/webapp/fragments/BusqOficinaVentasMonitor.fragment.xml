<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
>  
<Dialog
      id="ofiDial"
      title="{i18n>TableOficinas}"  
      resizable="true"
      >
 
    <fb:FilterBar
        search=".onBusqOficina"
        showClearOnFB="false"
        showFilterConfiguration="false"
        filterBarExpanded="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="OficinaVentas"
                name="A"
                label="{i18n>organiza}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_VkorgOfi"
                        value='{FiltrosOficina>/Vkorg}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="OficinaVentas"
                name="C"
                label="{i18n>canal}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_VtwegOfi"
                        value='{FiltrosOficina>/Vtweg}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="OficinaVentas"
                name="D"
                label="{i18n>sector}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true">
                <fb:control>
                    <Input
                        id="f_SpartOfi"
                        value='{FiltrosOficina>/Spart}'
                        editable="true"
                    />
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
    <Table id="idTableCecos" items="{
            path: 'listadoOficinas>/'}" growing="true" growingThreshold="20">
        <columns>
            <Column width="10%">
                <Text text="{i18n>ofi}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>descripcion}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Active" press=".onPressOficinas">
                <cells>
                    <Text text="{listadoOficinas>Vkbur}" />
                    <Text text="{listadoOficinas>Bezei}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Emphasized" press="CloseOficinasDiag">
                <layoutData>
                <OverflowToolbarLayoutData
                    priority="NeverOverflow"/>
            </layoutData>
                </Button>
            </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>