<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
>  
<Dialog
      id="cecoDialPosicion"
      title="{i18n>TableCecos}"  
      resizable="true"
      >
 
    <fb:FilterBar
        search=".onBusqCecosPosicion"
        showClearOnFB="false"
        showFilterConfiguration="false"
        filterBarExpanded="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="FiltrosCeco"
                name="A"
                label="{i18n>codCeco}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_codCecoPosicion"
                        value='{FiltrosCeco>/Kostl}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCeco"
                name="C"
                label="{i18n>nomCeco}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nomCecoPosicion"
                        value='{FiltrosCeco>/Ltext}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCeco"
                name="D"
                label="{i18n>nomSoc}"
                partOfCurrentVariant="true"
                visibleInFilterBar="true">
                <fb:control>
                    <Input
                        id="f_cecoSocPosicion"
                        value='{FiltrosCeco>/Kokrs}'
                        editable="true"
                    />
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
    <Table id="idTableCecosPosicion" items="{
            path: 'listadoCecos>/'}" growing="true" growingThreshold="20">
        <columns>
            <Column width="10%">
                <Text text="{i18n>codCeco}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>ktext}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>nomSoc}" />
            </Column>
            <Column width="25%">
                <Text text="{i18n>descSoc}"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Active" press=".onPressCecosPosicion">
                <cells>
                    <Text text="{listadoCecos>Kostl}" />
                    <Text text="{listadoCecos>Ltext}" />
                    <Text text="{listadoCecos>Kokrs}" />
                    <Text text="{listadoCecos>Butxt}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Emphasized" press="cecoDialPosicion">
                <layoutData>
                <OverflowToolbarLayoutData
                    priority="NeverOverflow"/>
            </layoutData>
                </Button>
            </OverflowToolbar>
    </Dialog>
</core:FragmentDefinition>