<core:FragmentDefinition
    controllerName="monitorpedidos.controller.MonitorPedidos"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:ui="sap.ui.table"
    xmlns:tnt="sap.tnt"
>
    <IconTabBar
        id="idIconTabBar"
        select=".onFilterSelect"
        class="sapUiResponsiveContentPadding"
        expanded="{device>/isNoPhone}"
        expandable="false">
        <content>
            <ui:Table
                id="idTablePEPs"
                selectionMode="None"
                rows="{path: 'ListadoContratos>/'}"
                visibleRowCountMode="Interactive"
                width="auto"
                enableCellFilter="{ui>/cellFilterOn}"
                filter="filterOption"
                sort="sortOption">
                <ui:columns>
                    <ui:Column
                        width="7.5em"
                        filterProperty="Idsolicitud"
                        sortProperty="Idsolicitud"
                        tooltip="{i18n>numCont}"
                    >
                        <Label text="{i18n>numCont}" />
                        <ui:template>
                            <ObjectIdentifier
                                    id="NumCont"
                                    title="{ListadoContratos>Idsolicitud}"
                                    titleActive = "true"
                                    titlePress="handleLinkCont(${ListadoContratos>Idsolicitud})" />
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        width="8em"
                        filterProperty="Fechadoc"
                        sortProperty="Fechadoc"
                        tooltip="{i18n>fechadocu}"
                    >
                        <Label text="{i18n>fechadocu}" />
                        <ui:template>
                            <Text text="{path: 'ListadoContratos>Fechadoc',  formatter: '.onFormatFechaDocVenta'}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="5em"
                        filterProperty="Creador"
                        sortProperty="Creador"
                        tooltip="{i18n>creador}"
                    >
                        <Label text="{i18n>creador}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Creador}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="7em"
                        filterProperty="CLIENTE"
                        sortProperty="CLIENTE"
                        tooltip="{i18n>codcli}"
                    >
                        <Label text="{i18n>codcli}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Cliente}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="11em"
                        filterProperty="Nombrecliente"
                        sortProperty="Nombrecliente"
                        tooltip="{i18n>nomcli}"
                    >
                        <Label text="{i18n>nomcli}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Nombrecliente}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>

                    <ui:Column
                        width="6em"
                        filterProperty="Netwr"
                        sortProperty="Netwr"
                        tooltip="{i18n>import}">
                        <Label text="{i18n>import}" />
                         <ui:template>
                            <Text  text="{path:'ListadoContratos>Netwr', formatter: '.onFormatImporte'}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="4.5em"
                        filterProperty="Waerk"
                        sortProperty="Waerk"
                        tooltip="{i18n>Moneda}">
                        <Label text="{i18n>Moneda}" />
                         <ui:template>
                            <Text text="{ListadoContratos>Waerk}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="7em"
                        filterProperty="Zorden"
                        sortProperty="Zorden"
                        tooltip="{i18n>zord}"
                    >
                        <Label text="{i18n>zord}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Zorden}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="6.5em"
                        filterProperty="Zcoste"
                        sortProperty="Zcoste"
                        tooltip="{i18n>zcost}"
                    >
                        <Label text="{i18n>zcost}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Zcoste}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="5em"
                        filterProperty="Orgventas"
                        sortProperty="Orgventas"
                        tooltip="{i18n>orgventas}"
                    >
                        <Label text="{i18n>orgventas}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Orgventas}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                    <ui:Column
                        width="7.5em"
                        filterProperty="Referenciped"
                        sortProperty="Referenciped"
                        tooltip="{i18n>Referencia}"
                    >
                        <Label text="{i18n>Referencia}" />
                        <ui:template>
                            <Text text="{ListadoContratos>Referenciped}" wrapping="false"/>
                        </ui:template>
                    </ui:Column>
                </ui:columns>
            </ui:Table>
        </content>
    </IconTabBar>
</core:FragmentDefinition>
