<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
>   
<Dialog
      id='cliDialMonitor'
      title="{i18n>TableClientes}"  
      resizable="true"
      >

    <fb:FilterBar
        search=".onBusqClientesMonitor"
        showClearOnFB="false"
        showFilterConfiguration="false"
        filterBarExpanded="false"
    >
        <fb:filterGroupItems>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="A"
                label="NIF/CIF"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nameAcrMoni"
                        value='{FiltrosCli>/Stcd1}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="B"
                label="Nombre"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_nifAcrMoni"
                        value='{FiltrosCli>/Name1}'
                    />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem
                groupName="FiltrosCli"
                name="C"
                label="Codigo de cliente"
                partOfCurrentVariant="true"
                visibleInFilterBar="true"
            >
                <fb:control>
                    <Input
                        id="f_lifnrAcrMoni"
                        value='{FiltrosCli>/Kunnr}'
                    />
                </fb:control>
            </fb:FilterGroupItem>            
        </fb:filterGroupItems>
    </fb:FilterBar>
    <Table items="{
            path: 'listadoClientes>/'}" growing="true" growingThreshold="10">
        <columns>
            <Column width="10%">
                <Text text="{i18n>cod}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>nombre}" />
            </Column>
            <Column width="20%">
                <Text text="{i18n>NIF}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Active" press=".onPressClienteMonitor">
                <cells>
                    <Text text="{listadoClientes>Kunnr}" />
                    <Text text="{listadoClientes>Name1}" />
                    <Text text="{listadoClientes>Stcd1}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
            <OverflowToolbar >
                <ToolbarSpacer/>
                <Button text="Cancelar" type="Emphasized" press="CloseCliDiagMonitor">
                <layoutData>
                <OverflowToolbarLayoutData
                    priority="NeverOverflow"/>
            </layoutData>
                </Button>
            </OverflowToolbar>
    </Dialog> 
</core:FragmentDefinition>
