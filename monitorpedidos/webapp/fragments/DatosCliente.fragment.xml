<core:FragmentDefinition controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout">
    <!-- Datos Cliente para la busqueda de filtros   -->
    <m:VBox renderType="Bare">
        <f:SimpleForm editable="true" maxContainerCols="2" layout="GridLayout" singleContainerFullSize="false" adjustLabelSpan="true">
            <f:content >
                <!-- -->
                <core:Title text="{i18n>TituloDatosdeCliente}" level="H5" />
                <m:Label text="{i18n>CodigoCliente}" />
                <m:Input enabled="false" editable="false" width="180px" value="{ModoApp>/tipopedido}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>NombreCliente}" />
                <m:Input enabled="false" editable="false" width="280px" value="{ModoApp>/Nombre}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>CIF}" />
                <m:Input enabled="false" editable="false" width="180px" value="{ModoApp>/Stcd1}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>MailDestinatarioFactura}" />
                <m:Input enabled="false" editable="false" width="280px" value="{ModoApp>/SmtpAddr}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>

                <core:Title text="" />
                <m:Label text="{i18n>Direccion}" />
                <m:Input enabled="false" editable="false" width="255px" value="{ModoApp>/Ort01}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>CodPostPob}" />
                <m:Input enabled="false" editable="false" width="120px" value="{ModoApp>/Pstlz}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>Pais}" />
                <m:Input enabled="false" editable="false" width="120px" value="{ModoApp>/Land1}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>ViaPago}" />
                <m:Input enabled="false" editable="false" width="120px" value="{ModoApp>/Zwels}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
                <m:Label text="{i18n>CondPago}" />
                <m:Input enabled="false" editable="false" width="120px" value="{ModoApp>/Zterm}">
                    <m:layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </m:layoutData>
                </m:Input>
            </f:content >
        </f:SimpleForm>
    </m:VBox>

</core:FragmentDefinition>