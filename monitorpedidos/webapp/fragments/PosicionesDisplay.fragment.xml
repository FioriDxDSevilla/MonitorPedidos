<core:FragmentDefinition controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"
    xmlns:table="sap.ui.table">
    <m:OverflowToolbar>
                <m:Title text="" />
                <m:ToolbarSpacer />
                <m:Button
                    id="botondelDis"
                    icon="sap-icon://delete"
                    text="{i18n>delPos}"
                    type="Emphasized"
                    press="onDeletePosPed"
                    visible="{= ${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false }"
                    enabled="true"
                />
                <m:Button
                    id="botonaddDisp"
                    icon="sap-icon://sys-add"
                    text="{i18n>addPos}"
                    type="Emphasized"
                    press="onaddPosPed"
                    visible="{= ${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false }"
                    enabled="true"
                />
                <m:Button
                    id="botoncopyDisp"
                    icon="sap-icon://copy"
                    text="{i18n>copyPos}"
                    type="Emphasized"
                    press="onCopyPosPed"
                    visible="{= ${ModoApp>/mode} === 'C' ? true : false ||  ${ModoApp>/mode} === 'M' ? true : false }"
                    enabled="true"
                />
            </m:OverflowToolbar>
    <m:VBox renderType="Bare">
        <!-- Añadida "lógica" para que cuando el pedido se abra en modo Visualización, la tabla sea de tipo Selection Mode NONE, para el resto de casos
            Creación y Modificación, la tabla será de tipo Selection Mode Single, para poder editar un pedido   -->
        <table:Table selectionMode="{= ${ModoApp>/mode} === 'D' ? 'None' : 'Single' || ${ModoApp>/mode} === 'M' ? 'Single' : 'None'}"
        id="TablaPosicionesDisp" rows="{path: 'DisplayPosPed>/'}" visibleRowCountMode="Interactive" visibleRowCount="3" width= "100%" selectionBehavior="RowOnly">
        <!--<table:Table selectionMode="Single" id="TablaPosiciones" rows="{path: 'DisplayPosPed>/results'}"  visibleRowCountMode="Interactive"-->
             <table:Column hAlign="Center" visible="{= ${ModoApp>/mode} === 'D' ? false : true ||  ${ModoApp>/mode} === 'M' ? true : false }" >
                <table:template>
                    <m:Button id="botonMod" icon="sap-icon://edit" tooltip="{i18n>modPos}"  visible="{= ${ModoApp>/mode} === 'D' ? false : true ||  ${ModoApp>/mode} === 'M' ? true : false }"   type="Ghost" press="onModPosPed"/>
                    <!--<m:Text text="{DisplayPosPed>Posnr}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>posicion}"/>
                <table:template>
                    
                    <m:Text text="{DisplayPosPed>Posnr}"/>
                </table:template>
            </table:Column>    
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Material}"/>
                <table:template>
                    
                    <m:Text text="{DisplayPosPed>Matnr}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Descripcion}" />
                <table:template>
                    
                    <m:Text text="{DisplayPosPed>Arktx}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Cantidad}" />
                <table:template>                    
                    <m:Text text="{DisplayPosPed>Kwmeng}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>cantBase}" />
                <table:template>
                    <m:Text text="{DisplayPosPed>Kpein}"/>
                    <!--<m:Text text="{DisplayPosPed>Kpein}"/>-->
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Unidades}" />
                <table:template>
                   
                    <m:Text text="{DisplayPosPed>Meins}"/>
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Importe}" />
                <table:template>                    
                    <m:Text text="{path:'DisplayPosPed>Netpr', formatter: '.onFormatImporte'}" />
                </table:template>
            </table:Column>
            <table:Column hAlign="Center">
                <m:Label text="{i18n>Moneda}" />
                <table:template>
                    
                    <m:Text text="{DisplayPosPed>Waerk}" />
                </table:template>
            </table:Column>
             <table:Column hAlign="Center">
                <m:Label text="{i18n>zcost}" />
                <table:template>
                    <m:Text text="{DisplayPosPed>Ykostl}" />
                </table:template>
            </table:Column>
             <table:Column hAlign="Center">
                <m:Label text="{i18n>zord}" />
                <table:template>
                    <m:Text text="{DisplayPosPed>Yaufnr}" />
                </table:template>
            </table:Column>
        </table:Table>
    </m:VBox>

</core:FragmentDefinition>
