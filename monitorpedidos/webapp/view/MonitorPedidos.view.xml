<mvc:View controllerName="monitorpedidos.controller.MonitorPedidos"
    xmlns:mvc="sap.ui.core.mvc"  displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"  height="100%">
    <Page id="page" title="{i18n>title}">
        <headerContent>
            <MenuButton icon="sap-icon://menu" tooltip="MÃ¡s opciones" >
                <menu>
                    <Menu>
                        <MenuItem 
                        text="{i18n>CrearCliente}" 
                        icon="sap-icon://person-placeholder" 
                        id="menuItemCrearCliente" 
                        press="onGetKeyFromItemMenu" 
                        key="CrearCliente"/>
                    </Menu>
                </menu>
            </MenuButton>
        </headerContent>
        <content>
            <!--<ScrollContainer
                height="100%"
                width="100%"
                vertical="true"
                horizontal="true"
                focusable="true"
            >-->
                <core:Fragment
                    fragmentName="monitorpedidos.fragments.Header"
                    type="XML"
                />
                <core:Fragment
                    fragmentName="monitorpedidos.fragments.headerBar"
                    type="XML"
                />
                <core:Fragment
                    fragmentName="monitorpedidos.fragments.TableFilters"
                    type="XML"
                />
            <!--</ScrollContainer>-->
        </content>
        <footer>
			<OverflowToolbar id="otbFooter" class="sapUiMediumMarginTop">
                <OverflowToolbarToggleButton tooltip="{i18n>exceldown}"  text="{i18n>exceldown}"  icon="sap-icon://download" press="onDownExcel"/>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Todos" press="onBusqTodos">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
				<Button type="Emphasized" text="Mis pedidos" press="onBusqMisPedidos">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
