<mvc:View controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:l="sap.ui.layout" height="100%">

    <m:Page id="page" title="{i18n>createOrderTitle}">
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout">
                <headerTitle>
                    <ObjectPageHeader id="pageHeader" objectTitle="Pedido: 100000002 - 25/10/2023 - Pdte Aprobar" />
                </headerTitle>
                <headerContent>
                    <m:VBox renderType="Bare">
                        <f:SimpleForm editable="true" 
                        id="SimpleFormDisplay" maxContainerCols="2" 
                        layout="GridLayout" singleContainerFullSize="false" adjustLabelSpan="true"
                        
                        >
                            <f:content >                           
                                 <!-- -->
                                <core:Title text="" /> 
                                
                                <m:Label text="{i18n>Denominacion}" />
                                <m:Input enabled="false" editable="false" width="300px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="Sociedad"/>
                                <m:Input enabled="false" editable="false" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="Zona de Ventas" />
                                <m:Input enabled="false" editable="false" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                  <m:Label text="Cliente" />
                                <m:Input enabled="false" editable="false" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="Contrato" />
                                <m:Input enabled="false" editable="false" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <!--  -->
                        
                                <core:Title text="" /> 
                             
                                <m:Text text="800,00 EUR" textAlign="End"/>
                                <m:Label/>
                                <m:Text text="Creado por: (NOMBRE)" textAlign="End"/>
                                <core:Title text="" /> 
                                <m:Label/>
                                <core:Title text="" /> 
                                <m:Button text="Visualizar pedido" type="Transparent" id="btnVisualizarPedido" width="130px"/>
                    
                            </f:content>
                        </f:SimpleForm>
                    </m:VBox>
                </headerContent>

                <ObjectPageSection showTitle="false" id="ObjectPageSection">
                    <ObjectPageSubSection  id="ObjectPageSubSection">
                        <core:Fragment fragmentName="monitorpedidos.fragments.headerDetallePedido" type="XML" />
                    </ObjectPageSubSection>
                </ObjectPageSection>

            </ObjectPageLayout>
        </m:content>
    </m:Page>
</mvc:View>