<mvc:View controllerName="monitorpedidos.controller.AltaPedidos"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:l="sap.ui.layout" height="100%">

    <m:Page id="page" title="{i18n>createOrderTitle}">
    <m:headerContent>
    <m:Button id="BtnGrabar" text="Grabar" icon="sap-icon://save"  visible="{= ${ModoApp>/mode}  === 'C' ?  true : false }" press="onCrear"/>
    </m:headerContent>
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout">
                <headerTitle>
                    <ObjectPageHeader id="pageHeader" objectTitle="Pedido: (Referenciped) - (FECHAD) - (ESTADO)" />
                </headerTitle>
             
                <headerContent>
                    <m:VBox renderType="Bare">
                        <f:SimpleForm editable="true" 
                        id="SimpleFormDisplay" maxContainerCols="2" 
                        layout="GridLayout" singleContainerFullSize="false" adjustLabelSpan="true"
                        
                        >
                            <f:content >                           
                                 <!-- -->
                                <core:Title text="" /> 
                                
                                <m:Label text="{i18n>Denominacion}" />
                                <m:Input width="300px" editable="{= ${ModoApp>/mode}  === 'C' ?  true : false }" >
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="{i18n>Sociedad}"/>
                                <m:Input editable="{= ${ModoApp>/mode}  === 'C' ?  false : true }" value="{ModoApp>/NomSoc}" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="{i18n>ZonaVentas}" />
                                <m:Input editable="{= ${ModoApp>/mode}  === 'C' ?  false : true }" value="{ModoApp>/Vtext}" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                  <m:Label text="{i18n>Cliente}" />
                                <m:Input editable="{= ${ModoApp>/mode}  === 'C' ?  false : true }" value="{ModoApp>/Nomcli}" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <m:Label text="{i18n>Contrato}" />
                                <m:Input editable="{= ${ModoApp>/mode}  === 'C' ?  false : true }" value="{ModoApp>/Nomcont}" width="225px">
                                    <m:layoutData>
                                        <l:GridData span="XL1 L2 M2 S4" />
                                    </m:layoutData>
                                </m:Input>
                                <!--  -->
                        
                                <core:Title text="" />
                                <m:Text text="(ImpPedido)" textAlign="End" id="txtPrice"/>
                                <m:Label/>
                                <m:Text text="Creado por: (Nombreapr)" textAlign="End"/>
                                <core:Title text="" /> 
                                <m:Label/>
                                <core:Title text="" /> 
                                <m:Button text="Visualizar pedido" type="Transparent" id="btnVisualizarPedido" width="130px" press=""/>
                    
                            </f:content>
                        </f:SimpleForm>
                    </m:VBox>
                    
                </headerContent>

                <ObjectPageSection showTitle="false" id="ObjectPageSection">
                    <ObjectPageSubSection  id="ObjectPageSubSection">
                        <core:Fragment fragmentName="monitorpedidos.fragments.headerDetallePedido" type="XML" />
                    </ObjectPageSubSection>
                </ObjectPageSection>

            </ObjectPageLayout>
        </m:content>
    </m:Page>
</mvc:View>